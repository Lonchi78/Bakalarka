<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <View
        android:id="@+id/bgInstructionCounter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_instruction_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textInstructionNumber"
        style="@style/TextBodyLargeSemibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/gray700"
        app:layout_constraintBottom_toBottomOf="@id/bgInstructionCounter"
        app:layout_constraintEnd_toEndOf="@id/bgInstructionCounter"
        app:layout_constraintStart_toStartOf="@id/bgInstructionCounter"
        app:layout_constraintTop_toTopOf="@id/bgInstructionCounter"
        tools:text="1" />

    <TextView
        android:id="@+id/textInstructionStep"
        style="@style/TextBodyLargeRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bgInstructionCounter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Preheat the oven to 350 In a large saucepan, cover the eggs with water and bring to a simmer. Cook over moderate heat for 8 minutes." />

</androidx.constraintlayout.widget.ConstraintLayout>