<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bottomSheetHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_handler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewRemove"
        style="@style/ProfileRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/labelRemove"
        app:layout_constraintTop_toTopOf="@id/labelRemove" />

    <ImageView
        android:id="@+id/iconRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/profile_own_recipes"
        android:src="@drawable/ic_close_24"
        app:layout_constraintBottom_toBottomOf="@id/viewRemove"
        app:layout_constraintStart_toStartOf="@id/viewRemove"
        app:layout_constraintTop_toTopOf="@id/viewRemove"
        app:tint="@color/orange500" />

    <TextView
        android:id="@+id/labelRemove"
        style="@style/TextBodyLargeRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/meal_planner_bottom_sheet_remove_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconRemove"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetHandler"/>


</androidx.constraintlayout.widget.ConstraintLayout>